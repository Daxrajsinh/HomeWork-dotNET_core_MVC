@model Homework.Models.BlackBoard

@{
    ViewData["Title"] = "HomeworkDelete";
}

<h3>Are you sure you want to delete this post?</h3>
<div>
    All the data of this post will be permenantly lost.<br/><br/>
    <form asp-action="DeleteBlackBoard" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" style="background-color: #5a9191; border-color: #5a9191; color: white" />
        <a asp-action="Home" asp-route-id="@Model.ClassroomId" asp-route-loadPartial="BlackBoard">Cancel</a>
    </form>
</div>
