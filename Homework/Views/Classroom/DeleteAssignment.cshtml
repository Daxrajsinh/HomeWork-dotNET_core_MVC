@model Homework.Models.Assignment

<h3 style="color: #5a9191">Are you sure you want to delete this assignment?</h3>
<div>
    <h4 style="color: #5a9191">Assignment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="color: #5a9191">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>

    <form asp-action="DeleteAssignment">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" style="background-color: #5a9191; border-color: #5a9191; color: white" /> |
        <a asp-action="Home" asp-route-id="@Model.ClassroomID" style="color: #5a9191">Back to Home</a>
    </form>
</div>